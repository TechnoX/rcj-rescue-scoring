head
  title RoboCup Junior Scoring

  block scripts
    script(src='/components/jquery/dist/jquery.min.js')
    script(src='/components/tether/dist/js/tether.min.js')
    script(src='/components/popper.js/dist/popper.js')
    script(src='/components/bootstrap/dist/js/bootstrap.js')
    script(src='/components/angular/angular.min.js')
    script(src="/components/angular-animate/angular-animate.js")
    script(src='/components/alertifyjs/build/alertify.min.js')
    script(src="/components/sweetalert/dist/sweetalert.min.js")
    script(src="/components/socket.io-client/dist/socket.io.js")
    script(src="/components/angular-bootstrap/ui-bootstrap-tpls.min.js")

  block css
    link(rel='stylesheet',href='/components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet',href='/stylesheets/style.css')
    link(rel="stylesheet" href="/components/font-awesome/css/font-awesome.css")

  meta(name='viewport', content='width=device-width, initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no')
  meta(name="apple-mobile-web-app-capable" content="yes")
  link(rel="apple-touch-icon", sizes="180x180", href="/images/apple-touch-icon.png")
  link(rel="icon", type="image/png", href="/images/favicon-32x32.png", sizes="32x32")
  link(rel="icon", type="image/png", href="/images/favicon-16x16.png", sizes="16x16")
  link(rel="manifest", href="/images/manifest.json")
  link(rel="mask-icon", href="/images/safari-pinned-tab.svg", color="#5bbad5")
  link(rel="shortcut icon", href="/images/favicon.ico")
  meta(name="msapplication-config", content="/images/browserconfig.xml")
  meta(name="theme-color", content="#ffffff")

  script.
    currentWidth = -1;
    $(window).on('load resize', function () {
      if (currentWidth == window.innerWidth) {
        return;
      }
      currentWidth = window.innerWidth;
      var height = $('.navbar').height();
      $('body').css('padding-top', height + 13);
    });

    let lastTouch = 0;
    document.addEventListener('touchend', event => {
      const now = window.performance.now();
    if (now - lastTouch <= 500) {
      event.preventDefault();
    }
    lastTouch = now;
    }, true);