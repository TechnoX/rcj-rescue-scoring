//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'AD'

append scripts
  script(src='/javascripts/access_denied.js')

block location
  a.breadcrumb-item(ng-click="go('/home')") Home
  span.breadcrumb-item.active Access denied

block content
  .row
    .col-md-1
    .col-md-10
      i.fa.fa-ban.fa-5x(aria-hidden="true" style="color:#e74c3c;") &nbsp;{{"accessDenied.title" | translate}}
      br
      br
      
      br
      h2 {{"accessDenied.description1" | translate}}
      p {{"accessDenied.description2" | translate}}
      br
      br
      button(onclick="location.href=document.referrer" class='btn btn-secondary btn-lg btn-block')
        i.fa.fa-undo.fa-2x(aria-hidden="true") {{'common.back' | translate}}
      