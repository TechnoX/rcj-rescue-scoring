//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'MapAdmin'

append scripts
  script.
    var competitionId = "#{id}"
  script(src='/javascripts/maze_map_admin.js')

block location
  a.breadcrumb-item(href='/home') Home
  a.breadcrumb-item(href='/admin') Admin
  a.breadcrumb-item(ng-href='/admin/{{competitionId}}') {{competition.name}}
  span.breadcrumb-item.active Maze maps

block content
  .row
    .col-md-offset-2.col-md-8
      h1 Maze maps
      button(onclick="location.href='/admin/'+competitionId+'/maze/editor'" class='btn btn-primary') Create a new map layout
      br
      br
      table
        thead
          tr
            th Name
            th Operation
        tbody
          tr(ng-repeat='map in maps')
            td
              a(ng-bind='map.name' ng-href="/maze/editor/{{map._id}}")
            td
              a(href="" ng-click='removeMap(map)') Delete

