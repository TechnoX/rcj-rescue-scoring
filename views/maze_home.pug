//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'MazeHome'

append scripts
  script.
    var competitionId = "#{id}"
  script(src='/javascripts/maze_home.js')

block location
  a.breadcrumb-item(href='/home') Home
  span.breadcrumb-item.active Maze

block content
  .row
    .col-md-1
    .col-md-10
      h1 Maze - Competitions
      button(ng-click="go('/maze/' + competition._id)" class='button-s button-bb' ng-repeat='competition in competitions') {{competition.name}}
