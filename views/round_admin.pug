//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'RoundAdmin'

append scripts
  script.
    var competitionId = "#{id}"
  script(src='/javascripts/round_admin.js')

block location
  a.breadcrumb-item(href='/home') Home
  a.breadcrumb-item(href='/admin') Admin
  a.breadcrumb-item(ng-href='/admin/{{competitionId}}') {{competition.name}}
  span.breadcrumb-item.active Rounds

block content
  .row
    .col-md-1
    .col-md-10
      h1 {{competition.name}} - Rounds
      table
        thead
          tr
            th Name
            th League
            th Action
        tbody
          tr
            td
              input(ng-model='roundName')
            td
              select(ng-model='roundLeague' ng-options='league for league in leagues')
            td
              button(ng-click='addRound()') Add round


      br
      br
      table
        thead
          tr
            th Name
            th League
            th Operation
        tbody
          tr(ng-repeat='round in rounds')
            td(ng-bind='round.name')
            td(ng-bind='round.league')
            td
              a(href="" ng-click='removeRound(round)') Delete
